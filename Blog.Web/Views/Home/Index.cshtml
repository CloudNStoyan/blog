@model PostModel[]

@{
    ViewData["Title"] = "Home";
}

@section styles {
    <link href="~/sass_compiled/home.css" rel="stylesheet" />
}
<main>
    @foreach (var post in Model)
    {
        <article>
            <header class="title">
                <h2>
                    <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">@post.Title</a>
                </h2>
                <div class="tags">
                    @foreach (var tag in post.Tags)
                    {
                        <a class="tag" href="#">@tag.Name</a>
                    }
                </div>
            </header>
            @{
                const int excerpLength = 40;
                string excerp = post.Content.Length > excerpLength ? $"{post.Content[..excerpLength]}.." : post.Content;
            }
            <p class="excerp">@excerp</p>
            
        </article>
    }
</main>