    <title>@ViewData["Title"] - Blog.Web</title>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header class="desktop">
        <nav>
            <a href="#">
                <span>Home</span>
            </a>
            <a href="#">
