<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Blog.Web</title>
    <link href="~/sass_compiled/layout.css" rel="stylesheet"/>
    <link rel="icon" href="/favicon.ico" type="image/x-icon"/>
    <link rel="stylesheet" href="/fontawesome/css/all.min.css"/>
    @await RenderSectionAsync("styles", false)
</head>
<body>
<header class="navigation">
    <div class="container search">
        <a href="#" class="menu">
            <i class="fas fa-bars"></i>
        </a>
        <a asp-controller="Home" asp-action="Index" class="homepage">Stoyan's Blog</a>
        <form class="search-wrapper">
            <a href="#" class="close-search"><i class="fa-solid fa-xmark"></i></a>
            <input type="text" name="search" placeholder="Search Stoyan's Blog"/>
            <button type="submit" class="search-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>
        <a href="#" class="open-search"><i class="fa-solid fa-magnifying-glass"></i></a>
        <nav>
            <ul>
                <li>

                    <a asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>Home
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa-solid fa-chart-line"></i>Most popular
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Auth" asp-action="LoginPage">
                        <i class="fa-solid fa-arrow-right-to-bracket"></i>Login
                    </a>
                </li>
            </ul>
        </nav>
        <div class="menu-overlay"></div>
    </div>
</header>
@RenderBody()
<script src="/js/mobile-menu.js"></script>
@await RenderSectionAsync("scripts", false)
<footer>
    <div class="message">This is personal blog made by <a href="#">Me</a></div>
    <div class="links-container">
        <a href="#">Email</a>
        <a href="#">About</a>
    </div>
</footer>
</body>
</html>