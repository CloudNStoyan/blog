@model FormPostModel
@{
    ViewData["Title"] = "Create Form";
    Layout = "_AdminPanelLayout";
}

@section styles {
    <link rel="stylesheet" href="~/admin/css/create-post.css" />
}

<div class="form-wrapper">
    <form asp-controller="Form" asp-action="CreateForm" class="main-form">
        <h1 class="text-center">Creating post</h1>
        <div class="form-group">
            <label for="Title">Title</label>
            <input class="form-control" asp-for="Title" value="@Model?.Title" />
        </div>
        <div class="form-group">
            <label for="Content">Content</label>
            <textarea class="form-control" asp-for="Content">@Model?.Content</textarea>
        </div>
        <div class="form-group">
            <label for="Tags">Tags</label>
            <input class="form-control" asp-for="Tags" value="@string.Join(',', Model?.Tags)" />
            <small class="form-text form-muted">
                * Separate tags with commas
            </small>
        </div>
        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "alert alert-danger" }, "div")
        @Html.ValidationMessageFor(x => x.Content, null, new { @class = "alert alert-danger" }, "div")
        @Html.ValidationMessageFor(x => x.Tags, null, new { @class = "alert alert-danger" }, "div")
        <button class="btn btn-primary" type="submit">Publish</button>
    </form>
</div>

