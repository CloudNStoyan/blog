@model FormEditModel
@{
    ViewData["Title"] = "Create Form";
}

@section styles {
    <link rel="stylesheet" href="~/admin/css/create-post.css" />
}

<div class="form-wrapper">
    <form asp-controller="Post" asp-action="Create" class="main-form">
        <h1 class="text-center">Creating post</h1>
        <div class="form-group">
            <label for="Title">Title</label>
            <input class="form-control" asp-for="Title" value="@Model?.Title" />
        </div>
        <div class="form-group">
            <label for="Content">Content</label>
            <textarea class="form-control" asp-for="Content">@Model?.Content</textarea>
        </div>
        <div class="form-group">
            <label for="Tags">Tags</label>
            <input class="form-control" asp-for="Tags" value="@string.Join(',', Model?.Tags)" />
            <small class="form-text form-muted">
                * Separate tags with commas
            </small>
        </div>
        <div>
            @if (Model?.ErrorMessages != null)
            {
                foreach (string errorMessage in Model.ErrorMessages)
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }
            }
        </div>
        <button class="btn btn-primary" type="submit">Publish</button>
    </form>
</div>

